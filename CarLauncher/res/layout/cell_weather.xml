<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19-28C\n北京\n晴朗"
            style="@style/AppEntryCellFont"
            android:drawablePadding="5dp"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:id="@+id/more_weather_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather"
            style="@style/AppEntryCellFont"/>

    <TextView
        android:id="@+id/traffic_controls"
        style="@style/AppEntryCellFont"
        android:layout_below="@id/more_weather_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/violation"
        style="@style/AppEntryCellFont"
        android:layout_below="@id/traffic_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/maintain"
        style="@style/AppEntryCellFont"
        android:layout_below="@id/violation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">


    <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="00:00"
            android:textSize="38dp"/>

    <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppEntryCellFont"
            android:text="YYYY年MM月DD日" />

    <TextView
            android:id="@+id/week_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppEntryCellFont"
            android:text="星期一" />
    </LinearLayout>
</merge>
